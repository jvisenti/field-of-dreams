platform :ios, '9.0'
use_frameworks!
inhibit_all_warnings!

target 'FieldofDreams' do
  pod 'Instabug'
  pod 'Crashlytics'

  pod 'Alamofire'
  pod 'KeychainAccess'
  pod 'Marshal'
  pod 'SwiftLint'

  pod 'BonMot'
  pod 'Anchorage'
  pod 'Swiftilities/CoreDataStack'
  pod 'Swiftilities/Logging'

  pod 'GoogleAnalytics',   '~>3.0'

  target 'FieldofDreamsTests' do
    pod 'OHHTTPStubs/Swift'
  end

end


pod 'SwiftGen'

post_install do |installer|
  require 'fileutils'
  FileUtils.cp_r('Pods/Target Support Files/Pods-FieldofDreams/Pods-FieldofDreams-acknowledgements.plist', 'FieldofDreams/Resources/Acknowledgements.plist', :remove_destination => true)
end

